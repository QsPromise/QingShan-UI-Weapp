/* components/button/button.wxss */
.qs-btn{text-align: center;vertical-align: middle;border: 0 ;background: #f7f7f7 !important;color: #333;font-size: 32rpx;border-radius: 5rpx;margin: 0 !important;padding: 0 !important;position: relative;cursor: pointer;white-space: nowrap;user-select: none; display: flex;align-items: center;justify-content: center;width: 200rpx;height: 80rpx;box-shadow: inset 0 0 0 1px rgba(0, 0, 0, 0.1);}.qs-btn-hover {opacity: 0.9;}
.qs-btn-long {
  border-radius: 0;
  margin: 0;
  box-shadow: none;
}
.qs-btn-large {
  width: 100% !important;
  height: 96rpx;
}
.qs-btn-small {
  width: 120rpx !important;
  height: 60rpx;
}
.qs-btn-primary {
  color: #fff !important;
  background: #2d8cf0 !important;
}
.qs-btn-ghost {
  color: #fff !important;
  background: #fff !important;
  color: #495060 !important;
}
.qs-btn-success {
  color: #fff !important;
  background: #19be6b !important;
}
.qs-btn-warning {
  color: #fff !important;
  background: #f90 !important;
}
.qs-btn-error {
  color: #fff !important;
  background: #ed3f14 !important;
}
.qs-btn-info {
  color: #fff !important;
  background: #2db7f5 !important;
}
.qs-btn-circle {
  border-radius: 80rpx;
}
.qs-btn-large.qs-btn-circle {
  border-radius: 96rpx;
}
.qs-btn-small.qs-btn-circle {
  border-radius: 60rpx;
}
.qs-btn-loading {
  opacity: 0.6;
}
.qs-btn-loading-inner {
  display: inline-block;
  margin-right: 12px;
  vertical-align: middle;
  width: 14px;
  height: 14px;
  background: 0 0;
  border-radius: 50%;
  border: 2px solid #fff;
  border-color: #fff #fff #fff transparent;
  animation: btn-spin 0.6s linear;
  animation-iteration-count: infinite;
}
.qs-btn-disabled {
  color: #bbbec4 !important;
  background: #f7f7f7 !important;
}
.qs-btn-link{
  width: fit-content !important;
  height: auto;
  background: transparent !important;
}
.qs-btn-plain{
  background: transparent !important;
  border: 1px solid #333;
}
.qs-btn-inline {
  display: inline-block;
}
@keyframes btn-spin {
  0% {
    transform: rotate(0);
  }
  100% {
    transform: rotate(360deg);
  }
}
